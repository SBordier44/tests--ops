services:
  {{ odoo_name }}:
    image: "{{ odoo_image }}"
    container_name: "{{ odoo_name }}"
    depends_on:
      - {{ db_name }}
    ports:
      - "{{ odoo_port }}:8069"
    environment:
      - HOST={{ db_name }}
      - USER={{ db_user }}
      - PASSWORD={{ db_password }}
    volumes:
      - "{{ odoo_volume_name }}:/var/lib/odoo"
      - ./config:/etc/odoo
      - ./addons:/mnt/extra-addons
    networks:
      - {{ network_name }}

  {{ db_name }}:
    image: {{ db_image }}
    container_name: {{ db_name }}
    environment:
      - POSTGRES_DB={{ db_name }}
      - POSTGRES_USER={{ db_user }}
      - POSTGRES_PASSWORD={{ db_password }}
      - PGDATA=/var/lib/postgresql/data
    volumes:
      - {{ odoo_database_name }}:/var/lib/postgresql/data
    networks:
      - {{ network_name }}

networks:
  {{ network_name }}:
    external: true
    name: {{ network_name }}

volumes:
  {{ odoo_volume_name }}:
  {{ odoo_database_name }}:
